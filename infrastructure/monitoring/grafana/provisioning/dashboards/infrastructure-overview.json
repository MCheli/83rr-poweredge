{
  "id": null,
  "uid": "infrastructure-overview",
  "title": "Infrastructure Overview",
  "tags": ["overview", "homelab", "infrastructure"],
  "timezone": "browser",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Services Status",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "count(container_last_seen{name!=\"\"})",
          "legendFormat": "Running Containers"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 8},
              {"color": "green", "value": 10}
            ]
          }
        }
      },
      "options": {"colorMode": "value", "graphMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "CPU",
      "type": "gauge",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
    },
    {
      "id": 3,
      "title": "Memory",
      "type": "gauge",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
    },
    {
      "id": 4,
      "title": "Disk",
      "type": "gauge",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"rootfs\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\"})) * 100",
          "legendFormat": "Disk %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
    },
    {
      "id": 5,
      "title": "Network In",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[5m]))",
          "legendFormat": "RX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "options": {"colorMode": "none", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0}
    },
    {
      "id": 6,
      "title": "Network Out",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[5m]))",
          "legendFormat": "TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "options": {"colorMode": "none", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0}
    },
    {
      "id": 7,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{name!=\"\"}[1m])) * 100",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "custom": {
            "fillOpacity": 20,
            "stacking": {"mode": "normal"}
          }
        }
      },
      "options": {"tooltip": {"mode": "multi"}},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 8,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "custom": {
            "fillOpacity": 20,
            "stacking": {"mode": "normal"}
          }
        }
      },
      "options": {"tooltip": {"mode": "multi"}},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 9,
      "title": "Container Status",
      "type": "table",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{name}}",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "name"},
            "properties": [{"id": "custom.width", "value": 200}]
          },
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [{"id": "displayName", "value": "Memory"}]
          }
        ]
      },
      "transformations": [
        {"id": "organize", "options": {"excludeByName": {"Time": true, "__name__": true, "id": true, "image": true, "instance": true, "job": true}}}
      ],
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12}
    },
    {
      "id": 10,
      "title": "Container Restarts (24h)",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(increase(container_start_time_seconds{name!=\"\"}[24h])) - count(container_start_time_seconds{name!=\"\"})",
          "legendFormat": "Restarts"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 10}
            ]
          }
        }
      },
      "options": {"colorMode": "value"},
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 12}
    },
    {
      "id": 11,
      "title": "Uptime",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "time() - node_boot_time_seconds",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dtdurations"
        }
      },
      "options": {"colorMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 12}
    },
    {
      "id": 12,
      "title": "Prometheus Targets",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "count(up == 1)",
          "legendFormat": "Healthy"
        },
        {
          "expr": "count(up == 0)",
          "legendFormat": "Down"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {"colorMode": "none", "graphMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 12}
    },
    {
      "id": 13,
      "title": "Load Average",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2
        }
      },
      "options": {"colorMode": "none", "graphMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 12}
    },
    {
      "id": 14,
      "title": "Network Traffic",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[1m]))",
          "legendFormat": "Received"
        },
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[1m]))",
          "legendFormat": "Transmitted"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
    },
    {
      "id": 15,
      "title": "Disk I/O",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum(rate(node_disk_read_bytes_total{device!~\"loop.*\"}[1m]))",
          "legendFormat": "Read"
        },
        {
          "expr": "sum(rate(node_disk_written_bytes_total{device!~\"loop.*\"}[1m]))",
          "legendFormat": "Write"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "30s"
}
