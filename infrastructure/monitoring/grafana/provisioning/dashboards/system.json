{
  "id": null,
  "uid": "system-dashboard",
  "title": "System Metrics",
  "tags": ["system", "node-exporter", "host"],
  "timezone": "browser",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "options": {"colorMode": "value", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "options": {"colorMode": "value", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0}
    },
    {
      "id": 3,
      "title": "Disk Usage (/)",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"rootfs\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\"})) * 100",
          "legendFormat": "Disk %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "options": {"colorMode": "value", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0}
    },
    {
      "id": 4,
      "title": "System Load (1m)",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 4},
              {"color": "red", "value": 8}
            ]
          }
        }
      },
      "options": {"colorMode": "value", "graphMode": "area"},
      "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0}
    },
    {
      "id": 5,
      "title": "Uptime",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "time() - node_boot_time_seconds",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dtdurations",
          "decimals": 0
        }
      },
      "options": {"colorMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0}
    },
    {
      "id": 6,
      "title": "CPU Cores",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "count(count(node_cpu_seconds_total) by (cpu))",
          "legendFormat": "Cores"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {"colorMode": "none"},
      "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0}
    },
    {
      "id": 7,
      "title": "CPU Usage Over Time",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "Total CPU %"
        },
        {
          "expr": "avg(irate(node_cpu_seconds_total{mode=\"user\"}[5m])) * 100",
          "legendFormat": "User %"
        },
        {
          "expr": "avg(irate(node_cpu_seconds_total{mode=\"system\"}[5m])) * 100",
          "legendFormat": "System %"
        },
        {
          "expr": "avg(irate(node_cpu_seconds_total{mode=\"iowait\"}[5m])) * 100",
          "legendFormat": "IO Wait %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
    },
    {
      "id": 8,
      "title": "System Load",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1m"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5m"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15m"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
    },
    {
      "id": 9,
      "title": "Memory Usage",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used"
        },
        {
          "expr": "node_memory_Cached_bytes",
          "legendFormat": "Cached"
        },
        {
          "expr": "node_memory_Buffers_bytes",
          "legendFormat": "Buffers"
        },
        {
          "expr": "node_memory_MemFree_bytes",
          "legendFormat": "Free"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        }
      },
      "options": {
        "tooltip": {"mode": "multi"}
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
    },
    {
      "id": 10,
      "title": "Memory Details",
      "type": "stat",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total"
        },
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "Available"
        },
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "options": {"colorMode": "none", "graphMode": "none"},
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 12}
    },
    {
      "id": 11,
      "title": "Swap Usage",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_memory_SwapTotal_bytes - node_memory_SwapFree_bytes",
          "legendFormat": "Used"
        },
        {
          "expr": "node_memory_SwapFree_bytes",
          "legendFormat": "Free"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 12}
    },
    {
      "id": 12,
      "title": "Disk Space Usage",
      "type": "bargauge",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay|squashfs\"} / node_filesystem_size_bytes{fstype!~\"tmpfs|overlay|squashfs\"})) * 100",
          "legendFormat": "{{mountpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "options": {"displayMode": "gradient", "orientation": "horizontal"},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
    },
    {
      "id": 13,
      "title": "Disk I/O Read",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total{device!~\"loop.*\"}[1m])",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 20}
    },
    {
      "id": 14,
      "title": "Disk I/O Write",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "rate(node_disk_written_bytes_total{device!~\"loop.*\"}[1m])",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 20}
    },
    {
      "id": 15,
      "title": "Network Traffic - Received",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[1m])",
          "legendFormat": "{{device}} RX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
    },
    {
      "id": 16,
      "title": "Network Traffic - Transmitted",
      "type": "timeseries",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*|br-.*|veth.*\"}[1m])",
          "legendFormat": "{{device}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
